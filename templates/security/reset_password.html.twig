{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
<section class="container my-3">
    <div class="row">
        <div class="col">
            <h1>Réinitialisation du mot de passe</h1>

            {{ form_start(passForm )}}

                {% if form_errors(passForm.password.first) %}
                    <div class="alert alert-danger alert-dismissible">
                        {{ form_errors(passForm.password.first) }}
                    </div>
                {% endif  %}
                
                <div class="form-group">
                    {{ form_label(passForm.password.first) }}
                    {{ form_widget(passForm.password.first) }}
                </div>

                <div class="form-group">
                    {{ form_label(passForm.password.second) }}
                    {{ form_widget(passForm.password.second) }}
                </div>

                <button type="submit" class="btn btn-primary">Valider</button>

            {{ form_end(passForm )}}
        </div>
    </div>
</section
{% endblock %}
